        <!-- Dispositivos de Saída -->
        <section id="saida" class="categoria">
            <h2>Dispositivos de Saída</h2>
            
            <div class="dispositivo">
                <h3>Monitor</h3>
                <div class="conteudo">
                    <div class="especificacoes">
                        <h4>Especificações:</h4>
                        <ul>
                            <li>Resolução: HD a 8K</li>
                            <li>Taxa de atualização: 60Hz a 360Hz</li>
                            <li>Tempo de resposta: 0.5ms a 5ms</li>
                            <li>Tecnologias: HDR, FreeSync, G-Sync</li>
                        </ul>
                    </div>
                    <div class="tecnologias">
                        <h4>Tipos de Painel:</h4>
                        <ul>
                            <li>IPS: Melhor cor e ângulo de visão</li>
                            <li>VA: Melhor contraste</li>
                            <li>TN: Menor latência</li>
                            <li>OLED: Contraste infinito</li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="dispositivo">
                <h3>Impressora</h3>
                <div class="conteudo">
                    <div class="tipos">
                        <h4>Tecnologias:</h4>
                        <ul>
                            <li>Jato de Tinta
                                <ul>
                                    <li>Resolução: até 5760x1440 dpi</li>
                                    <li>Ideal para fotos</li>
                                </ul>
                            </li>
                            <li>Laser
                                <ul>
                                    <li>Velocidade: 20-100 ppm</li>
                                    <li>Ideal para documentos</li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>

